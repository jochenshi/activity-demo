.header_content{
  padding-top 10px
  margin 0 5px 10px 5px
  border 1px solid #e3e3e3
  .title{
    li{
      padding-bottom 5px
    }
    .title_info{
      font-weight bold
    }
    .release_info{
      font-size 12px
      color #a4a4a4
      .release_time{
        padding-left 10px
      }
    }
    .identity_info{
      font-size 12px
      span{
        padding-right 10px
      }
    }
  }
  .info{
    font-size 14px
    text-align left
    padding-left 10px
    li{
      padding 5px 0
      .label{
        padding-left 10px
        padding-right 15px
        color #a4a4a4
      }
      .detail_description{
        display block
        padding 0 30px
      }
    }
  }
}
