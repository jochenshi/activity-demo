.s_card{
  margin-bottom 8px
  .card_top{
    text-align left
    .card_title{
      display inline-block
      margin 3px 0 0 3px
      max-width 70%
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
    }
  }
  .card_content{
    display flex
    .content_left{
      text-align left
      margin-top 10px
      flex 3
      .time_section{
        font-size 15px
        border 1px solid #d5d5d5
        border-radius 5px
        display inline-block
        padding 2px
        margin-left 9px
        color #b9b9b9
        background-color #ececec
      }
      .label_section{
        margin-top 5px
        //max-width 240px
        padding-left 9px
        span{
          font-size 12px
          border 1px solid #d5d5d5
          border-radius 5px
          margin-right 9px
          margin-bottom 4px
          display inline-block
          padding 1px 8px
          color #b9b9b9
          background-color #ececec
          &.is_active{
            background-color #A4DFEB
            border-color #8CCAD6
            color #ffffff
          }
        }
      }
    }
    .content_right{
      flex 2
      text-align left
      font-size 14px
      align-self flex-end
      margin-bottom 10px
      .list{
        display flex
        .label{

        }
        .sign_label{
          color #ff6868
        }
        .confirm_label{
          color #83d589
        }
        .text{
          flex 1
          align-self center
          margin-right 10px
        }
      }
      .text{
        text-align right
      }
    }
  }
}
