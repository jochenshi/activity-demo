.alert_wrapper{
  .alert_box{
    display flex
    flex-direction column
    position absolute
    width 80%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    justify-content center
    z-index 2049
    background-color #ffffff
    border-radius 5px
    .alert_header{
      padding 10px
      .header_title{
        text-align center
        font-size 16px
        font-weight 700
        color #333
      }
    }
    .alert_content{
      flex 1
      padding 10px 20px 20px 20px
      text-align center
    }
    .alert_bottom{
      text-align center
      display flex
      border 0
      border-top 1px solid #e3e3e3
      margin 0
      padding 0
      height 40px
      line-height 40px
      box-sizing border-box
      button{
        flex 1
        line-height 24px
        outline none
        border 0
        padding 0
        margin 0
        &.cancel{
          background-color #fff
          border-bottom-left-radius 5px
          //border-top 1px solid #e3e3e3
        }
        &.confirm{
          background-color #FD7878
          border-bottom-right-radius 5px
          //border-top 1px solid #fff
        }
      }
    }
  }
  .alert_model{
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    opacity .5
    background #000000
    z-index 1024
  }
}
