.alert_wrapper{
  .alert_box{
    display flex
    flex-direction column
    position absolute
    width 80%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    justify-content center
    z-index 2049
    background-color #ffffff
    border-radius 5px
    .alert_content{
      flex 1
      padding 20px
    }
    .alert_bottom{
      text-align center
      button{
        width 100px
      }
    }
  }
  .alert_model{
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    opacity .5
    background #000000
    z-index 1024
  }
}
