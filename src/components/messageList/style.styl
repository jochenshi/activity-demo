.wrapper{
  display flex
  align-items center
  border-bottom 1px solid #e3e3e3
  padding 10px
  font-size 13px
  .head_pic{
    width 30px
    height 30px
    border 1px solid  #e3e3e3
    border-radius 50%
  }
  .message_content{
    text-align left
    padding-left 20px
    flex 1
    line-height 20px
    .bottom_content{
      .activity_name{
        max-width 50%
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        display inline-block
        vertical-align bottom
      }
    }
  }
  .time{
    margin-top -20px
    margin-right 10px
    font-size 12px
  }
}
